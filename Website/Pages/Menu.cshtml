@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}
@using DinoDiner.Menu;

<h1>Menu</h1>
<div id="right_sidebar">
    <form method="post">
        <input type="text" name="Search" id="@Model.Search" value="Text" />
        <input type="submit" value="Search and Filter"/>
        <div class="menu_categories_filter">
            <label>
                <input type="checkbox" name="OrderCategory" value="Combos" />
                Combos
            </label>
            <label>
                <input type="checkbox" name="OrderCategory" value="Entrees" />
                Entrees
            </label>
            <label>
                <input type="checkbox" name="OrderCategory" value="Sides" />
                Sides
            </label>
            <label>
                <input type="checkbox" name="OrderCategory" value="Drinks" />
                Drinks
            </label>
        </div>

        <div id="price_filter">
            <label>Price</label>
            <br/>
            <label>
                Min
                <input type="number" step="0.5" name="MinimumPrice" id="minimum-price" value="@Model.MinimumPrice"/>
            </label>
            <label>
                Max
                <input type="number" step="0.5" name="MaximumPrice" id="maximum-price" value="@Model.MaximumPrice"/>
            </label>
        </div>

        <div id="exclude-ingredients">
            <label>Exclude Ingredients</label>
            @foreach(string s in Model.Menu.PossibleIngredients)
            {
                <label>
                    <input type="checkbox" name="@s" value="@Model.ExcludeIngredients"/>
                    @s
                </label>
            }
        </div>

    </form>
</div>

<h2>Combos</h2>
@foreach (CretaceousCombo combo in Model.Menu.AvailableCombos)
{
    <div class="menu-item">
        <p id="description">@combo.Description</p>
        <p>Price: $@combo.Price</p>
        <p>Calories: @combo.Calories</p>
        <p>
            Ingredients:
            <ul>
                @foreach (var s in @combo.Ingredients)
                {
                    <li>@s</li>
                }
            </ul>
        <p>
    </div>
}

