<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlavorSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="200"/>
            </Style>
        </WrapPanel.Resources>
        <Button Click="SelectCola">Cola</Button>
        <Button Click="SelectOrange">Orange</Button>
        <Button Click="SelectVanilla">Vanilla</Button>
        <Button Click="SelectChocolate">Chocolate</Button>
        <Button Click="SelectRootBeer">Root Beer</Button>
        <Button Click="SelectCherry">Cherry</Button>
        <Button Click="SelectLime">Lime</Button>
    </WrapPanel>
    
</Page>
